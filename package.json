{
  "name": "clean-node",
  "version": "3.0.0",
  "author": "Leandro2585 <leo.real2585@gmail.com>",
  "description": "NodeJS Api server template using concepts design patterns, clean code an SOLID principles",
  "main": "index.js",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "node build/main/server.js",
    "build": "rimraf build && babel src --extensions \".js,.ts\" --out-dir build",
    "postbuild": "copyfiles -u 1 public/**/* build/static",
    "debug": "nodemon -L --watch ./build --inspect=0.0.0.0:9222 --nolazy ./build/main/server.js",
    "up": "yarn build && docker-compose up -d",
    "down": "docker-compose down",
    "dev": "ts-node-dev -r tsconfig-paths/register src/main/server.ts",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test -- --watch -c jest-unit-config.js",
    "test:integration": "yarn test -- --watch -c jest-integration-config.js",
    "test:staged": "yarn test -- --findRelatedTests",
    "test:ci": "yarn test -- --coverage",
    "test:coverrals": "yarn test:ci && coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/plugin-proposal-decorators": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.5",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongodb": "^3.6.10",
    "@types/node": "^14.14.35",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "apollo-server-integration-testing": "^3.0.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "copyfiles": "^2.4.1",
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.24.1",
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongo-round": "^1.0.0",
    "mongodb": "^3.6.9",
    "nodemon": "^2.0.7",
    "swagger-ui-express": "^4.1.6",
    "validator": "^13.5.2"
  },
  "engines": {
    "node": "12.x"
  },
  "_moduleAliases": {
    "@domain": "build/domain",
    "@infra": "build/infra",
    "@data": "build/data",
    "@main": "build/main",
    "@shared": "build/shared",
    "@validation": "build/validation"
  }
}
