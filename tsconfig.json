{
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": "src",
    "rootDirs": ["src","tests"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "paths": {
      "@data/*": ["data/*"],
      "@main/*": ["main/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@validation/*": ["validation/*"],
      "@shared/*": ["shared/*"],
      "@tests/*": ["../tests/*"]
    }
  },
  "include": [
    "src",
    "tests"
  ]
}
