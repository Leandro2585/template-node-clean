{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@presentation/*": ["presentation/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
